{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "sourceMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "noEmit": true,

    /* Path aliases */
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
